<h1>Information on <%= @book_store.name %></h1>
<h2>Location: <%= @book_store.location %></h2>
<h3>Recipe Books in Stock:</h3>

<% @book_store.recipe_books.uniq.each do |recipe_book| %>
  Name: <%= link_to recipe_book.name, recipe_book_path(recipe_book) %> - Author Name: <%= recipe_book.author_name %> - Quantity In Stock: <%= recipe_book.overall_amount(recipe_book) %><br>
<% end %>
<br>
<%= link_to "View Stock Quantity Information",  book_store_stock_quantities_path(@book_store.id) %>

<h4>Navigation:</h4>

    <%= link_to "Go Back to Book Stores list", book_stores_path %><br>
    <%= link_to "Delete this Book Store", @book_store, method: :delete, data: { confirm: "Really?" } %><br>
    <%= link_to "Go Back to Manager Home Page", manager_path(@manager) %><br>
    <%= link_to "Log Out", logout_path %><br>

    <br>

    <%= image_tag "store.jpg" %>

